{
  "type": "bubble",
  "direction": "ltr",
  "size": "micro",
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "{{ count }}회 달성!",
        "weight": "bold"
      },
      {
        "type": "text",
        "text": "{{ display_name }}",
        "size": "sm"
      }
      {% for week_start in range(-2,33,7) %},
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
          {% for day in range(week_start, week_start + 7) %}

          {% if day < 1 or day > 30 %}
          {
            "type": "filler"
          }
          {% elif cells[day - 1].value %}
          {
            "type": "image",
            "url": "https://thirty-days.herokuapp.com/static/check.png"
          }
          {% else %}
          {
            "type": "text",
            "text": "{{ day }}",
            "align": "center",
            "size": "sm"
            {% if day in [5,12,15,19,26,30] %},
            "color": "#ff0000"
            {% endif %}
          }
          {% endif %}

          {{ ',' if day < week_start + 6 }}

          {% endfor %}
        ]
      }
      {% endfor %}
    ]
  }
}